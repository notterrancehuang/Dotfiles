syntax on 
set number
set ignorecase
set incsearch
set hlsearch
set autoindent
set smartindent
set smartcase
set smarttab
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set showmatch
set backspace=indent,eol,start
set winminheight=0
set winminwidth=0
set ruler

" Keeping it centered
nnoremap n nzzzv
nnoremap N Nzzzv
nnoremap J mzJ`z

" escape to unhighlight
nnoremap <silent> <esc> :noh<cr><esc>

